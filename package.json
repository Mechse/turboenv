{
  "name": "turboenv",
  "version": "0.1.6",
  "scripts": {
	"build": "tsup src/index.ts --format esm,cjs --dts",
    "prepare": "bun run build" 
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "description": "Minimal env var validation for monorepos using Zod",
  "type": "module",
  "keywords": ["env", "zod", "validation", "monorepo", "vite", "bun", "hono"],
  "author": "Max L",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "zod": "^4.0.15"
  }
}
